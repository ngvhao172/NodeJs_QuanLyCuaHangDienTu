        crossorigin="anonymous"></script>
</head>

<body>
    <!-- Content -->

    <div class="container">
        <div class="authentication-wrapper authentication-basic">
            <div class="col-3"></div>
            <div class="authentication-inner">
                <!-- Register -->
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center">
                            <a href="" class="app-brand-link gap-2">
                                <span class="app-brand-logo demo">
                                    <img src="/assets/Logo2.png" alt="" style="height: 65px; width: 110.11px">
                                </span>
                            </a>
                        </div>
                        {{#if messages.message}}
                        <div id="flash-alert" class="alert alert-{{messages.type}} alert-dismissible fade show"
                            role="alert">
                            <strong>{{messages.type}}!</strong> {{messages.message}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                            </button>
                        </div>
                        {{/if}}
                        <!-- /Logo -->
                        <h4 class="mb-2">Set Your Password? ðŸ”’</h4>
                        <p class="mb-4">Enter your password and newpassword to reset your password</p>
                        <form id="formAuthentication" class="mb-3" method="POST">
                            <div class="mb-3 form-password-toggle">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label" for="password">Password</label>
                                </div>
                                <div class="input-group input-group-merge">
                                    <input type="password" id="inputPassword" class="form-control" name="password"
                                        placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                        aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>
                            <div class="mb-3 form-password-toggle">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label" for="password">Confirm New Password</label>
                                </div>
                                <div class="input-group input-group-merge">
                                    <input type="password" id="inputPassword" class="form-control" name="cpassword"
                                        placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                        aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-primary d-grid w-100" type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /Register -->
            </div>
            <div class="col-3 p-5" style="height: 100vh">
                <div class="right-0 text-end mb-2"><strong>Xin chÃ o {{user.fullName}}!</strong></div>
                <div class=" d-md-flex justify-content-md-end"><a href="/login" class="text-white"><button
                            class="btn btn-primary right-0">Logout</button></a></div>
            </div>
        </div>

    </div>
    <script src="../assets/js/main.js"></script>

</body>
<script>
    setTimeout(() => {
        $('#flash-alert').fadeOut(5000)
        $('#passport-alert').fadeOut(5000)
    }, 5000);
</script>

</html>